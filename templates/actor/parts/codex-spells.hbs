<li class="flexrow item-header">
  <div class="codex-name">
    <span>{{localize "arm5e.sheet.spells"}} </span>
    <span>( {{ system.spellsCount }} )</span>
  </div>
</li>
{{> "systems/arm5e/templates/generic/metalic-bar.html" }}
{{#each system.filteredSpells as |spell id|}}
  <li class="item spell-value flexrow codex" data-name="{{spell.name}}" data-item-id="{{spell._id}}" data-uuid="{{spell.uuid}}"
    data-item-type="{{spell.type}}" data-compendium="spells">
    {{#if spell.system.description}}
    <div class="item-image item-control item-edit" style="max-width:60px"><img src="{{spell.img}}" title="{{spell.name}}" style="max-height:50px"/></div>
    {{else}}
    <div class="item-image item-control item-view" style="max-width:60px"><img src="{{spell.img}}" title="{{spell.name}}" style="max-height:50px"/></div>
    {{/if}}
    <div class="flexrow flex-center">
      <span class="flexrow spell-title design" data-name="{{spell.name}}">
        <!-- data-level="{{spell.system.baseLevel}}" data-technique="{{spell.system.technique.value}}" data-form="{{spell.system.form.value}}"-->
        <!--div class="item-image">
                            <a class="rollable" data-roll-type="item"><img src="{{spell.img}}" title="{{item.name}}" width="24" height="24" /></a>
                        </div-->
        {{spell.name}} {{#if (eq spell.system.ritual true )}} , {{localize "arm5e.sheet.ritual"}} - {{/if}}
        {{spell.system.localizedDesc}}
      </span>
    </div>
    {{#if spell.parent}}
    <div class="item-controls">
      <a class="item-control item-edit" title='{{localize "arm5e.hints.edit" item=(localize "TYPES.Item.spell")}}' ><i
          class="icon-Icon_Edit"></i></a>
      <a class="item-control item-delete"
        title='{{localize "arm5e.hints.delete" item=(localize "TYPES.Item.spell")}}'><i
          class="icon-Icon_Delete_Hand_Gesture"></i></a>
    </div>
    {{else}}
      <div class="item-controls">
      <a class="item-control item-view" title='{{localize "arm5e.hints.view" item=(localize "TYPES.Item.spell")}}'><i
          class="icon-Icon_Read"></i></a>
      <a class="item-control item-clone"
        title='{{localize "arm5e.hints.clone" item=(localize "TYPES.Item.spell")}}'><i
          class="icon-Icon_Copy"></i></a>
    </div>
    {{/if}}
  </li>
{{/each}}